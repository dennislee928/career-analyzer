# 資料庫配置
DB_TYPE=sqlite  # sqlite, postgresql, d1

# SQLite配置
DB_PATH=jobs.db

# PostgreSQL配置
PG_HOST=localhost
PG_DATABASE=jobs_db
PG_USER=postgres
PG_PASSWORD=password
PG_PORT=5432

# Cloudflare D1配置
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_D1_DATABASE_ID=845a885d-2722-4b74-9f50-e404d02216f3
CLOUDFLARE_API_TOKEN=your_api_token

# Flask配置
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_SECRET_KEY=your_secret_key_here

# 爬蟲配置
SCRAPER_DELAY_MIN=1
SCRAPER_DELAY_MAX=3
SCRAPER_MAX_PAGES=10

# 日誌配置
LOG_LEVEL=INFO
LOG_FILE=app.log 